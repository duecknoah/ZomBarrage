            <string>/// Slowly move its way to the finalx and finaly

/* move grenade towards the final landing coordinates created
 * created from the direction and distance to travel (vector) 
 */
 // If not yet at destination, keep moving
 if (scr_getAbsoluteDistance(initX, initY, x, y) &lt; dist) {
    var stepsUntilLand = 60 / global.timeScale;
    x += lengthdir_x(dist, dir) / stepsUntilLand;
    y += lengthdir_y(dist, dir) / stepsUntilLand;
}

// Scaling of image, make bigger being thrown into the air, and small when falling
var scaleSpd = 0.025 * global.timeScale;
var centerDist = (dist / 2);
var currentDist = scr_getAbsoluteDistance(initX, initY, x, y);
if (currentDist &lt; centerDist) {
    image_xscale += scaleSpd;
    image_yscale += scaleSpd;
}
else if (currentDist &lt; dist) {
    image_xscale -= scaleSpd;
    image_yscale -= scaleSpd;
}

// Prevent grenade from seeming huge or tiny
image_xscale = clamp(image_xscale, 0.5, 3);
image_yscale = clamp(image_yscale, 0.5, 3);

// If past or equal to distance the grenade is supposed to travel
if (scr_getAbsoluteDistance(initX, initY, x, y) &gt;= dist) {
    // Start ticking boom timer now that its on the ground
    boomTimer -= 1 / room_speed;
    depth = scr_getDepth(y, 0, true);
    // Update boom timer
    if (boomTimer &lt;= 0) {
        // Do destroy event
        instance_destroy();
    }
}
else {
    // Just keep spinning in the air
    image_angle += 2 * global.timeScale; // rotate as it is being thrown
}

draw_self();
