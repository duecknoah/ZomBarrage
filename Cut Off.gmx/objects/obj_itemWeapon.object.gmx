        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// If a change in weaponType, update the weapon
if (weaponType != initWeaponType) {
    image_index = scr_WeaponToId(weaponType);
    
    switch(weaponType) {
        case "Wimps Pistol": ammo = 64;
        break;
        case "M16": ammo = 128;
        break;
        case "Rocket Launcher": ammo = 10;
        break;
        case "Flashlight": ammo = -1;
        break;
        case "Loot Key": ammo = 1;
        break;
        case "Sniper Rifle": ammo = 32;
        break;
        case "Molotov Cocktail": ammo = 5;
        break;
        case "Frag Grenade": ammo = 5;
        break;
        case "Iron Sword": ammo = 1;
        break;
        case "Chainsaw": ammo = (room_speed * 0.05) * 35;
    }
    initWeaponType = weaponType;
}

if (ammo == 0) {
    image_alpha = 1;
    image_blend = c_red;
}
else {
    image_alpha = 1;
    image_blend = c_white;
}

showOutline = false; // set to false by default, triggered by player

// update bobbing
image_xscale += scaleSpd;
image_yscale += scaleSpd;

var currentScale = image_xscale; // xscale and yscale are the same
var maxScale = 0.8;
var minScale = 0.6;

if (isBobbingUp) {
    if (currentScale &lt; maxScale) {
        scaleSpd += 0.0005;
    }
    else {
        isBobbingUp = false;
        scaleSpd /= 2;
    }
}
else {
    if (currentScale &gt; minScale) {
        scaleSpd -= 0.0005;
    }
    else {
        isBobbingUp = true;
        scaleSpd /= 2;
    }
}
</string>
